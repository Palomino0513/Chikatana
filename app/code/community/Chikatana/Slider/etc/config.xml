<config>
    <modules>
        <Chikatana_Slider>
            <version>0.1.0</version>
        </Chikatana_Slider>
    </modules>
    <global>
        <blocks>
            <chikatana_slider>
                <class>Chikatana_Slider_Block</class>
            </chikatana_slider>
        </blocks>
        <helpers>
            <chikatana_slider>
                <class>Chikatana_Slider_Helper</class>
            </chikatana_slider>
        </helpers>
    </global>
    <frontend>
        <routers>
            <chikatana_slider>
                <use>standard</use>
                <args>
                    <module>Chikatana_Slider</module>
                    <frontName>chikatana_slider</frontName>
                </args>
            </chikatana_slider>
        </routers>
        <layout>
            <updates>
                <chikatana_slider>
                    <file>chikatana_slider.xml</file>
                </chikatana_slider>
            </updates>
        </layout>
    </frontend>
